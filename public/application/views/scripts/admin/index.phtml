<script>
$('#deletePhotos').on({
    click: function(e) {
        if (confirm("Esta seguro de querer eliminar estas imagenes? Esta accion no puede deshacerse")) {
            $('#sliderForm').submit();
        }
    }
})
$('#addPhotos').on({
    click: function(e) {
        e.preventDefault();
        window.location = '/admin/add-slider';
    }
});
</script>
