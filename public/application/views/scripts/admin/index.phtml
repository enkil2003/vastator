<h3>Slider del Home</h3>
<form id="sliderForm" method="post" action="">
  <p>Seleccione imagenes a eliminar</p>
<?php foreach($this->photos as $photo): ?>
  <img src="/img/slider/<?php echo $photo ; ?>" width="100" />
  <input type="checkbox" name="delete[]" value="<?php echo $photo; ?>" />
  <br />
  <br />
<?php endforeach; ?>
  <button id="deletePhotos">Eliminar Fotos</button>
  <button id="addPhotos">Agregar</button>
